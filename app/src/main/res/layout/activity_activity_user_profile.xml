<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.usnbik.project_progress_tracker.activity_user_profile"
    android:background="#4772fe"
    android:outlineProvider="bounds">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserProfileimageView"
        android:longClickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/images"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="1000dp"
        android:minHeight="100dp"
        android:background="#000000"
        android:id="@+id/tableLayout"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1000dp"
            android:minHeight="14dp"
            android:layout_margin="2dp"
            android:background="#000000">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/editTextName"
                android:minWidth="250dp"
                android:minHeight="15dp"
                android:editable="false"
                android:background="#ffffff"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNameFill"
                android:minHeight="15dp"
                android:minWidth="750dp"
                android:editable="false"
                android:layout_marginLeft="2dp"
                android:background="#ffffff"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="500dp"
            android:minHeight="14dp"
            android:layout_margin="2dp"
            android:background="#000000">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/editTextPhone"
                android:minWidth="150dp"
                android:minHeight="15dp"
                android:editable="false"
                android:background="#ffffff"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editPhoneFill"
                android:minHeight="15dp"
                android:minWidth="350dp"
                android:editable="false"
                android:layout_marginLeft="2dp"
                android:background="#ffffff"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="500dp"
            android:minHeight="14dp"
            android:layout_margin="2dp"
            android:background="#000000">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/editTextLocation"
                android:minWidth="150dp"
                android:minHeight="15dp"
                android:editable="false"
                android:background="#ffffff"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextLocationFill"
                android:minHeight="15dp"
                android:minWidth="350dp"
                android:editable="false"
                android:layout_marginLeft="2dp"
                android:background="#ffffff"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="500dp"
            android:minHeight="14dp"
            android:layout_margin="2dp"
            android:background="#000000">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:id="@+id/editTextJob"
                android:minWidth="150dp"
                android:minHeight="15dp"
                android:editable="false"
                android:background="#ffffff"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextJobFill"
                android:minHeight="15dp"
                android:minWidth="350dp"
                android:editable="false"
                android:layout_marginLeft="2dp"
                android:background="#ffffff"/>
        </TableRow>




    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/UserProfileimageView"
        android:layout_toStartOf="@+id/UserProfileimageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:onClick="activity_main_page"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/UserProfileimageView"
        android:layout_toEndOf="@+id/UserProfileimageView" />


</RelativeLayout>
